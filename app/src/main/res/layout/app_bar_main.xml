<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/darkGreenColor"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_gravity="center|center_vertical"
                android:src="@drawable/ic_logoonbar"
                android:visibility="visible" />


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_backwhite"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="Home"
                    android:visibility="invisible"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/eighteen_sp" />

                <ImageView
                    android:id="@+id/iv_grid_list_view"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_list_view"
                    android:visibility="invisible" />
        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="-48dp"
        android:background="@color/darkGreenColor"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_view"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_housewhite" />

            <TextView
                android:id="@+id/tv_home_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/twelve_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_view"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_searchwhite" />

            <TextView
                android:id="@+id/tv_category_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Categories"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/twelve_sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/cart"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_cart_white" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="30dp">

                <TextView
                    android:id="@+id/total_cart_quantity"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/bg_cart_items"
                    android:gravity="center"
                    android:text="23"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="8sp" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart"
                android:gravity="center"
                android:text="Cart"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/twelve_sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/favourite_view"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_likewhite" />

            <TextView
                android:id="@+id/tv_favourite_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="My List"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/twelve_sp" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/more_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/more"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_morewhite" />

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="More"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/twelve_sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>