<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.more.orders.OrderDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/bg_order_details"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="1dp">

        <ImageView
            android:id="@+id/mart_logo_view_order_details"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/metro" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:text="Store Name:"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/twelve_sp" />

                <TextView
                    android:id="@+id/tv_store_order_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Metro"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/ten_sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:text="Order No:"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/twelve_sp" />

                <TextView
                    android:id="@+id/tv_order_no_order_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="22356"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/ten_sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:text="Total Price:"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/twelve_sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:text="SAR"
                        android:textColor="@color/darkGreenColor"
                        android:textSize="@dimen/ten_sp" />

                    <TextView
                        android:id="@+id/tv_total_amount_order_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:text="256"
                        android:textColor="@color/darkGreenColor"
                        android:textSize="@dimen/ten_sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:text="Date:"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/twelve_sp" />

                <TextView
                    android:id="@+id/tv_date_order_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="08/01/2020"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/ten_sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:text="Time:"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/twelve_sp" />

                <TextView
                    android:id="@+id/tv_time_order_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="02:30 PM"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/ten_sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:text="Status:"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/twelve_sp" />

                <TextView
                    android:id="@+id/tv_status_order_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pending"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/ten_sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:text="Order Code:"
                    android:textColor="@color/lightBlueColor"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_order_code_order_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="002255"
                    android:textColor="@color/lightBlueColor"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        tools:listitem="@layout/row_items_order_details" />
</LinearLayout>