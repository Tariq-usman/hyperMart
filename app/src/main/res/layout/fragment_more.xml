<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/darkGreenColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="15dp"
            android:visibility="invisible"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bg_unselected"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="5dp"
                    android:src="@drawable/ic_search" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_hint"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/whiteColor" />

                <ImageView
                    android:id="@+id/bar_code_code_scanner_home"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginVertical="5dp"
                    android:src="@drawable/ic_barcode" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:padding="16dp"
            android:src="@drawable/ic_backwhite"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/iv_grid_list_view"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:padding="12dp"
            android:src="@drawable/ic_list_view"
            android:visibility="invisible" />
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="6dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/iv_stores"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/darkGreenColor"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="10dp"
                            android:src="@drawable/ic_store" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:text="@string/browse_store"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/eighteen_sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profilepic" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="right|bottom"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_camera" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Men Wain"
                        android:textColor="@color/darkGreenColor"
                        android:textSize="@dimen/sixteen_sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="-4dp"
                        android:background="@color/darkGreenColor" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/darkGreenColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:id="@+id/iv_order"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/darkGreenColor"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/ic_order" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:gravity="center"
                        android:text="@string/orders"
                        android:textColor="#97ADAD"
                        android:textSize="@dimen/fourteen_sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/darkGreenColor"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_customer_services"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/ic_msg" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:gravity="center"
                        android:text="@string/custemr_services"
                        android:textColor="#97ADAD"
                        android:textSize="@dimen/fourteen_sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="@string/profile"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/fourteen_sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".1dp"
                    android:layout_marginBottom="4dp"
                    android:background="#97ADAD" />

                <TextView
                    android:id="@+id/tv_terms_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="@string/terms_conditions"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/fourteen_sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".1dp"
                    android:layout_marginBottom="4dp"
                    android:background="#97ADAD" />

                <TextView
                    android:id="@+id/tv_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="@string/pricacy_policy"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/fourteen_sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".1dp"
                    android:layout_marginBottom="4dp"
                    android:background="#97ADAD" />

                <TextView
                    android:id="@+id/tv_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="@string/settings"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/fourteen_sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".1dp"
                    android:layout_marginBottom="4dp"
                    android:background="#97ADAD" />

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="@string/about"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/fourteen_sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".1dp"
                    android:layout_marginBottom="4dp"
                    android:background="#97ADAD" />

                <TextView
                    android:id="@+id/tv_rate_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="@string/rate_app"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/fourteen_sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".1dp"
                    android:layout_marginBottom="4dp"
                    android:background="#97ADAD" />

                <TextView
                    android:id="@+id/tv_log_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="@string/logout"
                    android:textColor="@color/darkGreenColor"
                    android:textSize="@dimen/fourteen_sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".1dp"
                    android:layout_marginBottom="4dp"
                    android:background="#97ADAD" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>